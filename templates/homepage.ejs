<% layout('layout/page') -%>

<div class="container-fluid">
    <div class="row justify-content-center p-5">
        <div class="col-12 p-5 text-center">
            <p>Join to <%= typeof roomId !== 'undefined' ? roomId : 'a' %> room</p>
        </div>
        <div class="col-12">
            <form class="row justify-content-center" method="get" action="/videoCall/live">
                <div class="col-md-4 col-sm-12 p-2">
                    <label for="userName" class="visually-hidden">Name</label>
                    <input name="userName"
                        type="text"
                        class="form-control"
                        id="userName"
                        placeholder="Name"
                        value="<%= typeof userName !== 'undefined' ? userName : '' %>"
                        required
                    >
                </div>
                <div class="col-md-4 col-sm-12 p-2">
                    <label for="inputRoom" class="visually-hidden">Room ID</label>
                    <input name="roomId"
                        type="text"
                        class="form-control"
                        id="inputRoom"
                        placeholder="Room ID"
                        value="<%= typeof roomId !== 'undefined' ? roomId : '' %>"
                        required
                    >
                </div>
                <div class="col-md-1 col-sm-12 p-2">
                    <button type="submit" class="btn btn-primary mb-3">Join</button>
                </div>
            </form>
        </div>
    </div>
</div>