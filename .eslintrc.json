{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "google": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "$": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "comma-dangle": ["error", "never"],
        "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
        "global-require": 0,
        "quote-props": ["error", "as-needed", { "keywords": true, "unnecessary": false }]
    }
}
